    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

<!--            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/scd"
                android:text="선생님정보"
                android:textColor="@color/black"
                android:textSize="20sp" />-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tdetail_imageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/et_tdetail_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="닉네임"
                        android:textColor="@color/black"
                        android:fontFamily="@font/scd"/>

                    <TextView
                        android:id="@+id/et_tdetail_univ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="학력"
                        android:textColor="@color/black"
                        android:fontFamily="@font/scd"/>

                    <TextView
                        android:id="@+id/et_tdetail_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="과목"
                        android:textColor="@color/black"
                        android:fontFamily="@font/scd"/>

                    <TextView
                        android:id="@+id/et_tdetail_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="주소"
                        android:textColor="@color/black"
                        android:fontFamily="@font/scd"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_goChat"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button"
                android:fontFamily="@font/scd"
                android:text="튜터챗으로 상담하기"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/scd"
                    android:paddingLeft="50dp"
                    android:text="페이"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/et_tdetail_paywork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/scd"
                    android:gravity="center_vertical"
                    android:textColor="#B53E46FD"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:text="소개"
                    android:fontFamily="@font/scd"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/et_dteacher_intro"
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:layout_margin="15dp"
                android:background="@color/white"
                android:fontFamily="@font/scd"
                android:gravity="start"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="16dp" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>