    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/address2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/scd"
                android:text="가능과목"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">

                <Spinner
                    android:id="@+id/spinner_teacher_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="200dp"
                    android:spinnerMode="dialog">

                </Spinner>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/address3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/scd"
                android:text="학교"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">

            <EditText
                android:id="@+id/et_teacher_univ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/joined"
                android:ems="10"
                android:fontFamily="@font/scd"
                android:hint="ex) 서강대학교"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/address4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/scd"
                android:text="학과"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">

            <EditText
                android:id="@+id/et_teacher_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/joined"
                android:ems="10"
                android:fontFamily="@font/scd"
                android:hint="ex) 생명공학과"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/address5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/scd"
                android:text="학번"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">

            <EditText
                android:id="@+id/et_teacher_univnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/joined"
                android:ems="10"
                android:fontFamily="@font/scd"
                android:hint="ex) 20131217"
                android:inputType="number"
                android:maxLength="8"
                android:padding="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/address6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/scd"
                android:text="페이"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">

            <EditText
                android:id="@+id/et_teacher_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/joined"
                android:ems="10"
                android:fontFamily="@font/scd"
                android:hint="만원 단위 입니다"
                android:inputType="number"
                android:maxLength="3"
                android:padding="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:layout_weight="1">

            <TextView
                android:id="@+id/address7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/scd"
                android:text="시간"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">

            <EditText
                android:id="@+id/et_teacher_worktime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/joined"
                android:ems="10"
                android:fontFamily="@font/scd"
                android:hint="매주 할 시간"
                android:inputType="number"
                android:maxLength="2"
                android:padding="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/scd"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="간단소개"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3">

        <EditText
            android:id="@+id/et_teacher_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/joined"
            android:ems="10"
            android:hint="소개말을 작성하세요"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:fontFamily="@font/scd"
            android:gravity="start"
            android:maxLength="200"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/teacher_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:fontFamily="@font/scd"
                android:text="등록"
                android:layout_marginRight="10dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start">

            <Button
                android:id="@+id/teacher_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/scd"
                android:text="취소"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>