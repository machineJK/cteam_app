    <Spinner
        android:id="@+id/spinner_teacher_subject"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="25dp"
        android:dropDownWidth="200dp"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Spinner>

    <EditText
        android:id="@+id/et_teacher_pay"
        android:layout_width="209dp"
        android:layout_height="40dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/joined"
        android:ems="10"
        android:fontFamily="@font/scd"
        android:hint="만원 단위 입니다"
        android:inputType="number"
        android:maxLength="3"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address6"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/scd"
        android:text="페이"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address5" />

    <TextView
        android:id="@+id/address7"
        android:layout_width="56dp"
        android:layout_height="29dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/scd"
        android:text="시간"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address6" />

    <TextView
        android:id="@+id/address3"
        android:layout_width="109dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/scd"
        android:text="학교"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address2" />

    <EditText
        android:id="@+id/et_teacher_worktime"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="258dp"
        android:background="@drawable/joined"
        android:ems="10"
        android:fontFamily="@font/scd"
        android:hint="매주 할 시간"
        android:inputType="number"
        android:maxLength="3"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address4"
        android:layout_width="109dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/scd"
        android:text="학과"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address3" />

    <EditText
        android:id="@+id/et_teacher_major"
        android:layout_width="210dp"
        android:layout_height="38dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="118dp"
        android:background="@drawable/joined"
        android:ems="10"
        android:fontFamily="@font/scd"
        android:hint="ex) 생명공학과"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_teacher_univ"
        android:layout_width="210dp"
        android:layout_height="38dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/joined"
        android:ems="10"
        android:fontFamily="@font/scd"
        android:hint="ex) 서강대학교"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_teacher_univnum"
        android:layout_width="210dp"
        android:layout_height="38dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/joined"
        android:ems="10"
        android:fontFamily="@font/scd"
        android:hint="ex) 20131217"
        android:inputType="number"
        android:maxLength="8"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address5"
        android:layout_width="109dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/scd"
        android:text="학번"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address4" />

    <TextView
        android:id="@+id/address2"
        android:layout_width="109dp"
        android:layout_height="35dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/scd"
        android:text="가능과목"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/teacher_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="232dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/button"
        android:fontFamily="@font/scd"
        android:text="취소"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/teacher_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/button"
        android:fontFamily="@font/scd"
        android:text="등록"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/scd"
        android:text="간단소개"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address7" />

    <EditText
        android:id="@+id/et_teacher_intro"
        android:layout_width="364dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/joined"
        android:ems="10"
        android:fontFamily="@font/scd"
        android:gravity="start"
        android:padding="10dp"
        android:maxLength="200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>