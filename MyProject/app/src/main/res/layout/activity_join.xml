<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout tools:context=".JoinActivity" android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24sp"
        android:text="아이디"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/id"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24sp"
        android:text="비밀번호"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/pw"
        app:layout_constraintTop_toBottomOf="@+id/id"/>

    <TextView
        android:id="@+id/pwcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="24dp"
        android:text="비번체크"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pw" />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24sp"
        android:text="이름"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/pwcheck"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24sp"
        android:text="성별"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/gender"
        app:layout_constraintTop_toBottomOf="@+id/name"/>

    <TextView
        android:id="@+id/birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="32dp"
        android:text="생년월일"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="24dp"
        android:text="이메일"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birth" />

    <EditText android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:id="@+id/member_id"
        app:layout_constraintStart_toEndOf="@+id/id"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPersonName"
        android:ems="10"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/member_pw"
        app:layout_constraintTop_toBottomOf="@+id/member_id"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/member_pwcheck"
        app:layout_constraintTop_toBottomOf="@+id/member_pw"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPersonName"
        android:ems="10" android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:id="@+id/member_name"
        app:layout_constraintTop_toBottomOf="@+id/member_pwcheck"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/member_gender"
        app:layout_constraintTop_toBottomOf="@+id/member_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:id="@+id/member_email"
        app:layout_constraintTop_toBottomOf="@+id/member_birth"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/member_birth"
        app:layout_constraintTop_toBottomOf="@+id/member_gender"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="가입"
        android:layout_marginTop="48dp"
        android:id="@+id/btnjoin"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintEnd_toStartOf="@+id/btnreset"/>

    <Button
        android:id="@+id/btnreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="취소"
        app:layout_constraintEnd_toStartOf="@+id/btnout"
        app:layout_constraintTop_toBottomOf="@+id/member_email" />

    <Button
        android:id="@+id/btnout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="나가기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_email" />

</androidx.constraintlayout.widget.ConstraintLayout>