<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Board_Write">

    <EditText
        android:id="@+id/etBrdTitle"
        android:layout_width="334dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:hint="제목"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etBrdContent"
        android:layout_width="348dp"
        android:layout_height="298dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="124dp"
        android:gravity="top"
        android:hint="내용"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/brdImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/blank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBrdContent"
        app:layout_constraintVertical_bias="0.191" />

    <ImageButton
        android:id="@+id/btnLoad"
        android:layout_width="32dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/photo_default"
        app:layout_constraintStart_toEndOf="@+id/brdImageView"
        app:layout_constraintTop_toBottomOf="@+id/etBrdContent" />

    <ImageButton
        android:id="@+id/btnPhoto"
        android:layout_width="32dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:src="@drawable/camera_image"
        app:layout_constraintStart_toEndOf="@+id/brdImageView"
        app:layout_constraintTop_toBottomOf="@+id/btnLoad" />

    <Button
        android:id="@+id/btnBrdJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="12dp"
        android:text="작성"
        app:layout_constraintStart_toEndOf="@+id/brdImageView"
        app:layout_constraintTop_toBottomOf="@+id/etBrdContent" />

    <Button
        android:id="@+id/btnBrdJoinCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="취소"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toEndOf="@+id/brdImageView"
        app:layout_constraintTop_toBottomOf="@+id/btnBrdJoin" />

</androidx.constraintlayout.widget.ConstraintLayout>