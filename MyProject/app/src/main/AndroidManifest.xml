<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <application
        android:name=".Adapter.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Tutors"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyProject"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".AdminMyInfo"
            android:label="@string/title_activity_admin_my_info"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".KakaoExtraInfo"
            android:label="@string/title_activity_kakao"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".NaverExtraInfo"
            android:label="@string/title_activity_kakao"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".ChatListStudentActivity"
            android:label="@string/title_activity_chat"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".ChatStartStudentActivity"
            android:label="@string/title_activity_chat"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".StudentDetail"
            android:label="@string/title_activity_student"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".ChatStartActivity"
            android:label="@string/title_activity_chat"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".TeacherDetail"
            android:label="@string/title_activity_teacher"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".MatchingStudent"
            android:label="@string/title_activity_matching"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".TeacherForm"
            android:label="@string/title_activity_teacher_f"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".Board"
            android:label="@string/title_activity_board"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".Board_Write"
            android:label="@string/title_activity_board"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".ChatListActivity"
            android:label="@string/title_activity_chat"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".JoinActivity"
            android:label="@string/title_activity_join"
            android:theme="@style/Theme.MyProject"/> <!-- 카카오 로그인 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="e4b59b3ef0a905da8d3e332f4d69a6d6" /> <!-- API24 이상부터 Url 이 file:// 로 시작되면 안되서 content:// 으로 변환시키는 부분 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider> <!-- http 라이브러리 사용 -->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".Matching"
            android:label="@string/title_activity_matching"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".ModifyMyInfo"
            android:label="@string/title_activity_my_info"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".MyInfo"
            android:label="@string/title_activity_my_info"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".BoardDetailForm"
            android:label="@string/title_activity_board"
            android:theme="@style/Theme.MyProject"/>
        <activity android:name=".StudentForm"
            android:label="@string/title_activity_student_f"
            android:theme="@style/Theme.MyProject"/>
        <activity
            android:name="com.soundcloud.android.crop.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" /> <!-- 사진 촬영을 위한 provide -->
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="2000" />
    </application>

</manifest>